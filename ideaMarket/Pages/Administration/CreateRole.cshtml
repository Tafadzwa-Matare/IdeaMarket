@page
@model ideaMarket.Pages.Administration.CreateRoleModel
@{
    ViewData["Title"] = "CreateRole";
}

    <div class="page-area">
        <div class="breadcumb-overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcrumb text-center">
                        <div class="section-headline white-headline">
                            <h3>New Role</h3>
                        </div>
                        <ul class="breadcrumb-bg">
                            <li class="home-bread">Home</li>
                            <li>New Role</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="about-area page-padding">

        <div class="container">
            <h2>
                Create New Role
            </h2>
            <br />

            <div class="">

            </div>

            <form method="post">

                <div class="text-danger" asp-validation-summary="All"></div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Create_Role.RoleName">Role Name</label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Create_Role.RoleName" class="form-control" />
                    </div>
                    <span asp-validation-for="Create_Role.RoleName" class="text-danger"></span>
                </div>



                <div class="form-group row">
                    <div class="col-6 offset-3">
                        <button type="submit" value="Register" class="btn btn-primary form-control">Create Role</button>
                    </div>

                </div>

            </form>
        </div>
      
    </div>

