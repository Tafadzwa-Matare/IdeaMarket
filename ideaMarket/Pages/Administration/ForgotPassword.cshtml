@page
@model ideaMarket.Pages.Administration.ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="page-area-confirmed-email">
    <div class="breadcumb-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="breadcrumb text-center">
                    <div class="section-headline white-headline">
                        <h3>Password Reset</h3>
                    </div>
                    <ul class="breadcrumb-bg">
                        <li class="home-bread">Home</li>
                        <li>Forgot Password</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="payment-history-area bg-color fix area-padding-2">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-headline text-center">

                    @*<h3 style="color: #E6922E;">@Model.Idea.IdeaName</h3>*@

                </div>
            </div>
        </div>

        <!-- Idea Plan -->
        <div class="row">
            <div class="contact-inner">
                <div class="col-md-1 col-sm-0 col-xs-0">

                </div>
                <!-- Start contact icon column -->
                <div class="col-md-10 col-sm-12 col-xs-12">
                    <div class="contact-icon text-center">
                        <div class="single-icon">
                            <i class="flaticon-003-approve"></i>

                            <div class="login-form">
                                <h4 class="login-title">Forgot Password</h4>
                              <br />    
                                    
                                <div class="row">
                                    <div class="col-md-2 col-sm-0 col-xs-0">

                                    </div>
                                    <div class="col-md-8 col-sm-12 col-xs-12">
                                        <form method="post">

                                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                                <input asp-for="Input.Email" class="form-control" placeholder="Enter Email" />
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                                <button type="submit" class="login-btn">Send</button>
                                            </div>

                                        </form>
                                        <br />
                                        <text>Password Reset Token Is Sent To Email:</text>
                                    </div>
                                    <div class="col-md-2 col-sm-0 col-xs-0">

                                    </div>

                                </div>



                            </div>


                        </div>
                    </div>
                </div>
                <div class="col-md-1 col-sm-0 col-xs-0">

                </div>

            </div>
        </div>

    </div>
</div>

