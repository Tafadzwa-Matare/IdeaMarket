@section Scripts{
    <script>
//-----------------------
        //- EMPLOYEE ACTIVITIES PERFOMANCE CHART -
        //-----------------------


        var ticksStyle = {
            fontColor: '#495057',
            fontStyle: 'bold'
        }

        var mode = 'index'
        var intersect = true

        var $activitiesChart = $('#activities-chart')
        var activitiesChart = new Chart($activitiesChart, {
            type: 'bar',
            data: {
                labels: ['JAN', 'FEB', 'MAR', 'APR', 'MAY','JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'],
                datasets: [
                    {
                        backgroundColor: '#007bff',
                        borderColor: '#007bff',
                        data: [@Model.JanIdeasTotal, @Model.FebIdeasTotal, @Model.MarIdeasTotal, @Model.AprIdeasTotal, @Model.MayIdeasTotal, @Model.JunIdeasTotal, @Model.JulIdeasTotal, @Model.AugIdeasTotal, @Model.SepIdeasTotal, @Model.OctIdeasTotal, @Model.NovIdeasTotal, @Model.DecIdeasTotal]
                    },
                    {
                        backgroundColor: '#ced4da',
                        borderColor: '#ced4da',
                        data: [@Model.JanInvestmentsActivities, @Model.FebInvestmentsActivities, @Model.MarInvestmentsActivities, @Model.AprInvestmentsActivities, @Model.MayInvestmentsActivities, @Model.JunInvestmentsActivities, @Model.JulInvestmentsActivities, @Model.AugInvestmentsActivities, @Model.SepInvestmentsActivities, @Model.OctInvestmentsActivities, @Model.NovInvestmentsActivities, @Model.DecInvestmentsActivities]
                    }
                ]
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    mode: mode,
                    intersect: intersect
                },
                hover: {
                    mode: mode,
                    intersect: intersect
                },
                legend: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        // display: false,
                        gridLines: {
                            display: true,
                            lineWidth: '4px',
                            color: 'rgba(0, 0, 0, .2)',
                            zeroLineColor: 'transparent'
                        },

                    }],
                    xAxes: [{
                        display: true,
                        gridLines: {
                            display: false
                        },
                        ticks: ticksStyle
                    }]
                }
            }
        })
    </script>



    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        })

        $(document).ready(function () {
            $("a.demo-1").simplePopup();
            $("#Post-News").simplePopup({ type: "html", htmlSelector: "#CreateNewsPopup" });
        });

        $(document).ready(function () {
            $("a.demo-1").simplePopup();
            $("#Post-Article").simplePopup({ type: "html", htmlSelector: "#CreateArticlePopup" });
        });
    </script>



}

